<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/anneePalmaRL"
        android:gravity="center_horizontal"
        android:paddingBottom="20dp">
        <TextView
            android:id="@+id/textanneePalma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Palmares "
            android:textSize="40dp"
            android:paddingBottom="20dp"/>

        <TextView
            android:id="@+id/anneePalma"
            android:layout_toEndOf="@id/textanneePalma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXXX"
            android:textSize="40dp"
            />

    </RelativeLayout>


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/anneePalmaRL">
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <LinearLayout
            android:id="@+id/LLPalmaresCoupe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="-20dp"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="9dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="99"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="31"
                android:gravity="center">
                <TextView
                    android:id="@+id/NomTournoi1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/trophy_size"
                    android:paddingBottom="10dp"
                    android:text="Tournoi1"/>
                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"/>
                <TextView
                    android:id="@+id/ValeurRecord1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:textSize="@dimen/record_size"
                    android:text="Record 1"/>
            </LinearLayout>

            <TextView
                android:id="@+id/espace1"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="fill_parent" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="31"
                android:gravity="center">
                <TextView
                    android:id="@+id/NomTournoi2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:textSize="@dimen/trophy_size"
                    android:text="Tournoi2"/>
                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"/>
                <TextView
                    android:id="@+id/ValeurRecord2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:textSize="@dimen/record_size"
                    android:text="Record 2"/>
            </LinearLayout>
            <TextView
                android:id="@+id/espace2"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="fill_parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="31">
                <TextView
                    android:id="@+id/NomTournoi3"
                    android:paddingBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/trophy_size"
                    android:text="Tournoi1"/>
                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                </ImageView>
                <TextView
                    android:id="@+id/ValeurRecord3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:textSize="@dimen/record_size"
                    android:text="Record 3"/>
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imagePalma"
            android:layout_below="@+id/LLPalmaresCoupe"
            android:paddingTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            />

        <TextView
            android:id="@+id/textePalma"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:layout_below="@+id/imagePalma"
            android:paddingTop="20dp"
            android:textSize="@dimen/text_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
       </RelativeLayout>
    </ScrollView>


</RelativeLayout>